CODE :

#include <iostream>
using namespace std;

int main() {
    int arr[] = {1, 3, 5, 7, 9}, key = 7;
    int n = 5, low = 0, high = n - 1;
    while (low <= high) {
        int mid = (low + high) / 2;
        if (arr[mid] == key) {
            cout << mid;
            return 0;
        } else if (arr[mid] < key) low = mid + 1;
        else high = mid - 1;
    }
    cout << -1;
}
