CODE :

#include <iostream>
using namespace std;

int main() {
    int matrix[4][4] = {
        {1,4,7,11}, {2,5,8,12}, {3,6,9,16}, {10,13,14,17}
    };
    int target = 6, n = 4, m = 4;
    int i = 0, j = m - 1;
    while (i < n && j >= 0) {
        if (matrix[i][j] == target) {
            cout << "True";
            return 0;
        } else if (matrix[i][j] > target) j--;
        else i++;
    }
    cout << "False";
}
