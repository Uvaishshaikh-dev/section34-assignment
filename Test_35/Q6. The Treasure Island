CODE:

#include <iostream>
using namespace std;

int main() {
    int n, m;
    cin >> n >> m;
    int arr[n][m];
    for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            cin >> arr[i][j];
        }
    }
    int maxSum = arr[0][0], rowNum = 1;
    for(int i=0;i<n;i++){
        int sum = 0;
        for(int j=0;j<m;j++) sum += arr[i][j];

        if(i == 0 || sum > maxSum){
            maxSum = sum;
            rowNum = i + 1;
        }
    }
    cout << "Row " << rowNum << " (sum=" << maxSum << ")";
}
