CODE :

#include <iostream>
using namespace std;

int main() {
    int matrix[3][3] = {{1,3,5}, {7,10,11}, {16,20,30}};
    int target = 10, n = 3, m = 3;
    int low = 0, high = n * m - 1;
    while (low <= high) {
        int mid = (low + high) / 2;
        int val = matrix[mid / m][mid % m];
        if (val == target) {
            cout << "True";
            return 0;
        } else if (val < target) low = mid + 1;
        else high = mid - 1;
    }
    cout << "False";
}
