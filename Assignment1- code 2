#include <iostream>
using namespace std;

int main() {
    int N;
    cin >> N;

    int board[100][100];
    int sumMain = 0, sumSecondary = 0;

    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            cin >> board[i][j];
            if (i == j) sumMain += board[i][j];
            if (i + j == N - 1) sumSecondary += board[i][j];
        }
    }

    cout << sumMain << " " << sumSecondary << endl;
    return 0;
}
